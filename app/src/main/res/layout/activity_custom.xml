            app:layout_constraintVertical_bias="0.776"/>
    <Switch
            android:text="@string/extra_cheese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/extraCheese"
            app:layout_constraintTop_toTopOf="parent" android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.078"
            app:layout_constraintVertical_bias="0.649"/>
    <Switch
            android:text="@string/green_pepper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/greenPepper"
            app:layout_constraintTop_toTopOf="parent" android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.775"
            app:layout_constraintVertical_bias="0.512"/>
    <Switch
            android:text="@string/ham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/ham"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.262"
            app:layout_constraintVertical_bias="0.711" android:textSize="18sp"/>
    <Switch
            android:text="@string/olives"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/olives"
            app:layout_constraintTop_toTopOf="parent" android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.816"
            app:layout_constraintVertical_bias="0.582"/>
</androidx.constraintlayout.widget.ConstraintLayout>